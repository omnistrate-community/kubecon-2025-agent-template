# Database Configuration
DATABASE_URL=postgresql+asyncpg://agentuser:changeme_secure_password@localhost:5432/agentdb

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# LLM Provider API Key
# Copy this file to .env and fill in your actual API key
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Local Testing Values (only used when Omnistrate system parameters are not available)
# These simulate what Omnistrate would inject in production
TENANT_ID=test-tenant-local
TENANT_EMAIL=test@local.dev
TENANT_NAME=Local Test User
TENANT_ORG_ID=org-local-test
TENANT_ORG_NAME=Local Test Organization
OMNISTRATE_INSTANCE_ID=instance-local-test
OMNISTRATE_RESOURCE_ID=resource-local-test
OMNISTRATE_SERVICE_ID=service-local-test
OMNISTRATE_PLAN_ID=plan-local-test

# Agent Configuration
DEFAULT_MODEL=claude-sonnet-4-5
MAX_EXECUTION_TIME=300
MAX_RETRIES=3

# Multi-tenancy
ENABLE_TENANT_ISOLATION=true
